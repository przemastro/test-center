<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testcenter">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="TestCenter"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.testcenter.MainActivity"
            android:screenOrientation="portrait"
            android:label="TestCenter"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.testcenter.Tests"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.testcenter.Bugs"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.testcenter.BugsCount"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.testcenter.Performance"
            android:screenOrientation="landscape">
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>